Lab03
const byte LEDs[] = {8, 9, 10, 11, 12, 13, 14, 15};
const byte total = sizeof(LEDs);
byte index = 0;
int i;
void setup()
{
  pinMode(6, INPUT);
  for (byte i = 0; i < total; i++)
  {
    pinMode(LEDs[i], OUTPUT);
  }
}

void loop()
{
  if (digitalRead(6))
  {
    for (i = 0; i < 8; i++)
    {
      digitalWrite(LEDs[i], HIGH);
      delay(100);
      digitalWrite(LEDs[i], LOW);

    }
    for (i = 7; i >= 0; i--)
    {
      digitalWrite(LEDs[i], HIGH);
      delay(100);
      digitalWrite(LEDs[i], LOW);

    }
  }
  else
  {
    for (byte i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
    }
    delay(1000);
    for (byte i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], LOW);
    }
    delay(1000);
    for (byte i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
    }
    delay(1000);
    for (byte i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], LOW);
    }
    delay(1000);
    for ( i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for ( i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for ( i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for ( i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for ( i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for ( i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for ( i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (byte i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
    }
    delay(1000);
    for (byte i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], LOW);
    }
    delay(1000);
    for (byte i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], HIGH);
    }
    delay(1000);
    for (byte i = 0; i < 8; i++)
    {
      digitalWrite( LEDs[i], LOW);
    }
    delay(1000);

    for (i = 7; i >= 0; i--)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (i = 7; i >= 0; i--)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (i = 7; i >= 0; i--)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (i = 7; i >= 0; i--)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (i = 7; i >= 0; i--)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (i = 7; i >= 0; i--)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (i = 7; i >= 0; i--)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    for (i = 7; i >= 0; i--)
    {
      digitalWrite( LEDs[i], HIGH);
      delay(100);
      digitalWrite( LEDs[i], LOW);
    }
    delay(2000);
  }
}

